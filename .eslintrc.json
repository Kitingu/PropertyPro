{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "node": true,
        "es6": true,
        "browser": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "describe": "readonly",
        "it": "readonly",
        "before": "readonly",
        "after": "readonly",
        "after": "readonly"
    },
    "rules": {
        "comma-dangle": "warn",
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "none",
                "mocha/no-exclusive-tests": "error"
            }
        ]
    }
}
